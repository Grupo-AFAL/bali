<% if !hidden %>
  <%= tag.div **bullets do %>
    <% bullets_count.times do |index| %>
      <%= tag.button(class: "slider__bullet glide__bullet", 'aria-label': "Carousel Item #{index + 1}", data: { 'glide-dir': "=#{index}" }) %>
    <% end %>
  <% end %>
  <%= tag.div **options do %>
    <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
      <%= render Bali::Icon::Component.new(previous_icon || 'arrow-left') %>
    </button>
    <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
      <%= render Bali::Icon::Component.new(next_icon || 'arrow-right') %>
    </button>
  <% end %>
<% end %>
