<%= tag.div **@options do %>
  <div data-glide-el="track" class="glide__track">
    <ul class="glide__slides">
      <% items.each do |item| %>
        <li class="glide__slide">
          <%= item %>
        </li>
      <% end %>
    </ul>
  </div>

  <%= bullets || render(Bali::Carousel::Bullets::Component.new(count: items.size)) %>
  <%= arrows || render(Bali::Carousel::Arrows::Component.new) %>
<% end %>