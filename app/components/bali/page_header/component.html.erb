<%= render Bali::Level::Component.new do |c| %>
  <%= c.level_left do |level| %>
    <%= level.item(class: 'block') do %>
      <%= tag.h1 @title, class: title_classes %>
      <%= tag.p @subtitle, class: subtitle_classes if @subtitle %>
    <% end %>
  <% end %>

  <%= c.level_right do %>
    <%= content %>
  <% end %>
<% end %>
