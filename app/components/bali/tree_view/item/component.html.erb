<%= tag.div **@options do %>
  <%= tag.div class: class_names('item', 'is-childless': !items?, 'is-root': @root, 'is-active': active?) do %>
    <%= tag.span(class: class_names('caret', 'caret-down': active_child?),
                 data: { action: 'click->tree-view-item#toggle', 'tree-view-item-target': 'caret' }) %>
    <%= link_to @name, @path %>
  <% end %>

  <% if items? %>
    <%= tag.div(
        class: class_names('children', 'is-hidden': !active_child?),
        data: { 'tree-view-item-target': 'children' }
    ) do %>
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
