<%= link_to href, **options do %>
  <% if icon.present? %>
    <%= icon %>
  <% elsif icon_name.present? %>
    <%= render Bali::Icon::Component.new(icon_name) %>
  <% end %>

  <% if name.present? %>
    <%= tag.span name %>
  <% end %>

  <% if icon_right.present? %>
    <%= icon_right %>
  <% end %>
<% end %>
