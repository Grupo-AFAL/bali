<%= link_to href, **options do %>

  <% if icon.present? %>
    <%= icon %>
  <% elsif icon_name.present? %>
    <%= render Bali::Icon::Component.new(icon_name) %>
  <% end %>

  <% if name.present? %>
    <%= tag.span name if name.present? %>
  <% end %>

  <%= icon_right if icon_right.present? %>

  <%= content %>
<% end %>
