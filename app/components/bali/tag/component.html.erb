<% if href.blank? %>
  <%= tag.div(**@options) do %>
    <%= text %>
    <%= tag.button(**delete_button) if delete && text.to_s.length > 0 %>
  <% end %>
<% else %>
  <% if @is_grouped %>
    <%= tag.div(**@control_options) do %>
      <%= tag.div(**@addons_options) do %>
        <%= tag.a(href: href, **@options) do %>
          <%= text %>
        <% end %>
        <%= tag.a(**delete_button) if delete && text.to_s.length > 0 %>
      <% end %>
    <% end %>
  <% else %>
    <%= tag.a(href: href, **@options) do %>
      <%= text %>
      <%= tag.button(**delete_button) if delete && text.to_s.length > 0 %>
    <% end %>
  <% end %>
<% end %>
