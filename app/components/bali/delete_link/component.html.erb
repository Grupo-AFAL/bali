<% if @disabled %>
  <%= render Bali::HoverCard::Component.new(hover_url: @disabled_hover_url) do |c| %>
    <% c.trigger do %>
      <%= tag.a(name, class: 'button has-text-danger is-text', disabled: true) %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to name, href, class: classes, data: { 'turbo-method': :delete ,confirm: confirm } %>
<% end %>
