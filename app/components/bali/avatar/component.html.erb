<%= tag.div **@options do %>
  <figure class="image is-128x128">
    <% if picture? %>
      <%= picture %>
    <% else %>
      <%= image_tag(@placeholder_url, class: 'is-rounded', data: { 'avatar-target': 'output' }) %>
    <% end %>
  </figure>
  <div class="icon-content">
    <label>
      <%= render Bali::Icon::Component.new('camera') %>
      <div class="control">
        <%= @form.file_field @method, accept: accepted_formats,
                           data: { 'avatar-target': 'input', action: 'change->avatar#showImage' } %>
      </div>
    </label>
  </div>
<% end %>
