<%= tag.div class: class_names(
              'gantt-chart-cell',
              'milestone': task.milestone?,
              'has-children': task.children.any?
            ),
            style: "left: #{task.position_left}px; width: #{task.width}px",
            data: {
              controller: 'interact',
              'task-id': task.id,
              'parent-id': task.parent_id,
              'interact-position-value': task.position_left,
              'interact-width-value': task.width,
              'interact-params-value': task.params.to_json,
              'gantt-chart-target': 'timelineCell',
            } do %>

  <%= tag.div class: 'gantt-chart-cell-content' do %>
    <% if resize_handle? %>
      <%= render Bali::Icon::Component.new('handle',
                  class: 'gantt-chart-resize gantt-chart-resize-left',
                  data: {
                    action: 'mousedown->interact#onResizeStart',
                    'interact-handle-param': 'left' }) %>
    <% end %>

    <%= render Bali::GanttChart::DragHandle::Component.new(task: task, draggable: draggable?) %>

    <% if resize_handle? %>
      <%= render Bali::Icon::Component.new('handle',
                  class: 'gantt-chart-resize gantt-chart-resize-right',
                  data: {
                    action: 'mousedown->interact#onResizeStart',
                    'interact-handle-param': 'right' }) %>
    <% end %>
  <% end %>

  <span class="right-timeline-task-name" style="left: <%= task.width + task_name_padding %>px">
    <%= task.name %>
  </span>
<% end %>
