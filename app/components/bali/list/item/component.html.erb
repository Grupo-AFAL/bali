<%= tag.div(**options) do %>
  <div class="item-contents">
    <% if title? %>
      <%= title %>
    <% end %>

    <% if subtitle? %>
      <%= subtitle %>
    <% end %>
  </div>

  <% if content.present? %>
    <div class="item-contents">
      <%= content %>
    </div>
  <% end %>

  <% if actions? %>
    <div class="item-actions">
      <% actions.each do |action| %>
        <%= action %>
      <% end %>
    </div>
  <% end %>
<% end %>
